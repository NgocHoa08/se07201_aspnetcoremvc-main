@model SIMS.SimsDbContext.Entities.Users

@{
    ViewData["Title"] = "Settings";
    var fullName = Model?.FullName ?? "";
    var email = Model?.Email ?? "";
    var phoneNumber = Model?.PhoneNumber ?? "";
    var username = Model?.Username ?? "";
    var role = Model?.Role ?? "";
    var status = Model?.Status ?? "";
}

<div class="container-fluid px-4">
    <h1 class="mt-4"><i class="fas fa-cog me-2"></i>Settings</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Settings</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Sidebar Menu -->
        <div class="col-xl-3 col-lg-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-sliders-h me-2"></i>Settings Menu</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="#profile" class="list-group-item list-group-item-action active" data-bs-toggle="list">
                        <i class="fas fa-user me-2"></i>My Profile
                    </a>
                    <a href="#security" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="fas fa-lock me-2"></i>Security
                    </a>
                    <a href="#notifications" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="fas fa-bell me-2"></i>Notifications
                    </a>
                    <a href="#preferences" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="fas fa-palette me-2"></i>Preferences
                    </a>
                </div>
            </div>

            <!-- User Info Card -->
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                    </div>
                    <h5 class="mb-1">@username</h5>
                    <p class="text-muted mb-2">@email</p>
                    <span class="badge bg-primary">@role</span>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-xl-9 col-lg-8">
            <div class="tab-content">
                <!-- Profile Tab -->
                <div class="tab-pane fade show active" id="profile">
                    <div class="card shadow-lg border-0 mb-4">
                        <div class="card-header bg-gradient-primary text-white py-3">
                            <h5 class="mb-0"><i class="fas fa-user me-2"></i>Profile Information</h5>
                        </div>
                        <div class="card-body p-4">
                            <form asp-action="UpdateProfile" method="post">
                                @Html.AntiForgeryToken()

                                <div class="row mb-3">
                                    <label class="col-sm-3 col-form-label fw-bold">
                                        <i class="fas fa-id-badge me-2"></i>Username
                                    </label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control form-control-lg" value="@username" readonly
                                               style="background-color: #e9ecef;" />
                                        <small class="text-muted">
                                            <i class="fas fa-lock me-1"></i>Username cannot be changed
                                        </small>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-sm-3 col-form-label fw-bold">
                                        <i class="fas fa-user me-2"></i>Full Name
                                    </label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control form-control-lg" id="fullName"
                                               name="fullName" value="@fullName" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="email" class="col-sm-3 col-form-label fw-bold">
                                        <i class="fas fa-envelope me-2"></i>Email
                                    </label>
                                    <div class="col-sm-9">
                                        <input type="email" class="form-control form-control-lg" id="email"
                                               name="email" value="@email" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="phoneNumber" class="col-sm-3 col-form-label fw-bold">
                                        <i class="fas fa-phone me-2"></i>Phone Number
                                    </label>
                                    <div class="col-sm-9">
                                        <input type="tel" class="form-control form-control-lg" id="phoneNumber"
                                               name="phoneNumber" value="@phoneNumber" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label class="col-sm-3 col-form-label fw-bold">
                                        <i class="fas fa-user-tag me-2"></i>Role
                                    </label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control form-control-lg" value="@role" readonly
                                               style="background-color: #e9ecef;" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label class="col-sm-3 col-form-label fw-bold">
                                        <i class="fas fa-toggle-on me-2"></i>Status
                                    </label>
                                    <div class="col-sm-9">
                                        <span class="badge bg-success fs-6 px-3 py-2">
                                            <i class="fas fa-check-circle me-1"></i>@status
                                        </span>
                                    </div>
                                </div>

                                <hr class="my-4">

                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-save me-2"></i>Save Changes
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Security Tab -->
                <div class="tab-pane fade" id="security">
                    <div class="card shadow-lg border-0 mb-4">
                        <div class="card-header bg-gradient-danger text-white py-3">
                            <h5 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Change Password</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Choose a strong password with at least 6 characters
                            </div>

                            <form asp-action="ChangePassword" method="post">
                                @Html.AntiForgeryToken()

                                <div class="mb-3">
                                    <label for="currentPassword" class="form-label fw-bold">
                                        <i class="fas fa-key me-2"></i>Current Password
                                    </label>
                                    <input type="password" class="form-control form-control-lg"
                                           id="currentPassword" name="currentPassword" required />
                                </div>

                                <div class="mb-3">
                                    <label for="newPassword" class="form-label fw-bold">
                                        <i class="fas fa-lock me-2"></i>New Password
                                    </label>
                                    <input type="password" class="form-control form-control-lg"
                                           id="newPassword" name="newPassword" required />
                                    <small class="text-muted">Minimum 6 characters</small>
                                </div>

                                <div class="mb-3">
                                    <label for="confirmPassword" class="form-label fw-bold">
                                        <i class="fas fa-lock me-2"></i>Confirm New Password
                                    </label>
                                    <input type="password" class="form-control form-control-lg"
                                           id="confirmPassword" name="confirmPassword" required />
                                </div>

                                <hr class="my-4">

                                <div class="text-end">
                                    <button type="submit" class="btn btn-danger btn-lg">
                                        <i class="fas fa-key me-2"></i>Change Password
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Notifications Tab -->
                <div class="tab-pane fade" id="notifications">
                    <div class="card shadow-lg border-0 mb-4">
                        <div class="card-header bg-gradient-warning text-dark py-3">
                            <h5 class="mb-0"><i class="fas fa-bell me-2"></i>Notification Settings</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="mb-4">
                                <h6 class="mb-3"><i class="fas fa-envelope-open-text me-2"></i>Email Notifications</h6>
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" id="emailCourses" checked>
                                    <label class="form-check-label" for="emailCourses">
                                        Course updates and announcements
                                    </label>
                                </div>
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" id="emailGrades" checked>
                                    <label class="form-check-label" for="emailGrades">
                                        Grade notifications
                                    </label>
                                </div>
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" id="emailEvents">
                                    <label class="form-check-label" for="emailEvents">
                                        Event reminders
                                    </label>
                                </div>
                            </div>

                            <div class="mb-4">
                                <h6 class="mb-3"><i class="fas fa-desktop me-2"></i>Push Notifications</h6>
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" id="pushNotif" checked>
                                    <label class="form-check-label" for="pushNotif">
                                        Enable push notifications
                                    </label>
                                </div>
                            </div>

                            <hr class="my-4">

                            <div class="text-end">
                                <button type="button" class="btn btn-warning btn-lg text-dark">
                                    <i class="fas fa-save me-2"></i>Save Preferences
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Preferences Tab -->
                <div class="tab-pane fade" id="preferences">
                    <div class="card shadow-lg border-0 mb-4">
                        <div class="card-header bg-gradient-info text-white py-3">
                            <h5 class="mb-0"><i class="fas fa-palette me-2"></i>Appearance & Preferences</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="mb-4">
                                <label for="language" class="form-label fw-bold">
                                    <i class="fas fa-language me-2"></i>Language
                                </label>
                                <select class="form-select form-select-lg" id="language">
                                    <option selected>English</option>
                                    <option>Tiếng Việt</option>
                                    <option>中文</option>
                                    <option>日本語</option>
                                </select>
                            </div>

                            <div class="mb-4">
                                <label for="timezone" class="form-label fw-bold">
                                    <i class="fas fa-clock me-2"></i>Timezone
                                </label>
                                <select class="form-select form-select-lg" id="timezone">
                                    <option selected>Asia/Ho_Chi_Minh (GMT+7)</option>
                                    <option>Asia/Tokyo (GMT+9)</option>
                                    <option>America/New_York (GMT-5)</option>
                                    <option>Europe/London (GMT+0)</option>
                                </select>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-moon me-2"></i>Theme
                                </label>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="darkMode">
                                    <label class="form-check-label" for="darkMode">
                                        Enable Dark Mode
                                    </label>
                                </div>
                            </div>

                            <hr class="my-4">

                            <div class="text-end">
                                <button type="button" class="btn btn-info btn-lg text-white">
                                    <i class="fas fa-save me-2"></i>Save Preferences
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .bg-gradient-danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        }

        .bg-gradient-warning {
            background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        }

        .bg-gradient-info {
            background: linear-gradient(135deg, #0dcaf0 0%, #0891b2 100%);
        }

        .list-group-item.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-color: #667eea;
        }

        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
        }

        .form-check-input:checked {
            background-color: #667eea;
            border-color: #667eea;
        }
    </style>
}

@section Scripts {
    <script>
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}