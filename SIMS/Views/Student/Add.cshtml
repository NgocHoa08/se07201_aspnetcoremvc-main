@model SIMS.Models.Student

@{
    ViewData["Title"] = "Add Student";
}

<div class="container-fluid px-4">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="card shadow-lg border-0 mt-4 mb-5">
                <div class="card-header bg-gradient-success text-white py-4">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>Add New Student
                    </h4>
                    <small>Fill in the student information below</small>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Add" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Basic Information -->
                        <h5 class="section-title">
                            <i class="fas fa-id-badge me-2"></i>Basic Information
                        </h5>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="StudentCode" class="form-label fw-bold">
                                    <i class="fas fa-barcode me-1"></i>Student Code <span class="text-danger">*</span>
                                </label>
                                <input asp-for="StudentCode" class="form-control form-control-lg"
                                       placeholder="e.g., SV001" />
                                <span asp-validation-for="StudentCode" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label fw-bold">
                                    <i class="fas fa-user me-1"></i>Full Name <span class="text-danger">*</span>
                                </label>
                                <input asp-for="FullName" class="form-control form-control-lg"
                                       placeholder="e.g., Nguyen Van A" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold">
                                    <i class="fas fa-envelope me-1"></i>Email <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Email" type="email" class="form-control form-control-lg"
                                       placeholder="student@example.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label fw-bold">
                                    <i class="fas fa-phone me-1"></i>Phone Number
                                </label>
                                <input asp-for="Phone" class="form-control form-control-lg"
                                       placeholder="0123456789" />
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-4">
                                <label asp-for="DateOfBirth" class="form-label fw-bold">
                                    <i class="far fa-calendar me-1"></i>Date of Birth
                                </label>
                                <input asp-for="DateOfBirth" type="date" class="form-control form-control-lg" />
                                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Gender" class="form-label fw-bold">
                                    <i class="fas fa-venus-mars me-1"></i>Gender
                                </label>
                                <select asp-for="Gender" class="form-select form-select-lg">
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="EnrollmentYear" class="form-label fw-bold">
                                    <i class="far fa-calendar-alt me-1"></i>Enrollment Year
                                </label>
                                <input asp-for="EnrollmentYear" type="number" class="form-control form-control-lg"
                                       min="1900" max="2100" value="@DateTime.Now.Year" />
                                <span asp-validation-for="EnrollmentYear" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Address" class="form-label fw-bold">
                                <i class="fas fa-map-marker-alt me-1"></i>Address
                            </label>
                            <input asp-for="Address" class="form-control form-control-lg"
                                   placeholder="Enter address" />
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <!-- Academic Information -->
                        <h5 class="section-title mt-4">
                            <i class="fas fa-graduation-cap me-2"></i>Academic Information
                        </h5>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Major" class="form-label fw-bold">
                                    <i class="fas fa-book me-1"></i>Major
                                </label>
                                <input asp-for="Major" class="form-control form-control-lg"
                                       placeholder="e.g., Computer Science" />
                                <span asp-validation-for="Major" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="GPA" class="form-label fw-bold">
                                    <i class="fas fa-chart-line me-1"></i>GPA (0.00 - 4.00)
                                </label>
                                <input asp-for="GPA" type="number" step="0.01" class="form-control form-control-lg"
                                       min="0" max="4" placeholder="0.00" />
                                <span asp-validation-for="GPA" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label fw-bold">
                                <i class="fas fa-sticky-note me-1"></i>Notes
                            </label>
                            <textarea asp-for="Notes" class="form-control" rows="3"
                                      placeholder="Additional notes..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox"
                                       role="switch" checked />
                                <label asp-for="IsActive" class="form-check-label fw-bold">
                                    <i class="fas fa-toggle-on me-1"></i>Active Status
                                </label>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save me-2"></i>Save Student
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-success {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        }

        .section-title {
            color: #28a745;
            font-weight: 600;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #f0f0f0;
        }

        .form-control:focus, .form-select:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.25rem rgba(40, 167, 69, 0.25);
        }

        .form-check-input:checked {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-success {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            border: none;
        }

            .btn-success:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(40, 167, 69, 0.4);
            }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}