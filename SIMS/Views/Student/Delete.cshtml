@model SIMS.Models.Student
@{
    ViewData["Title"] = "Delete Student";
}

<div class="container-fluid px-4">
    <div class="row justify-content-center">
        <div class="col-xl-8">
            <div class="card shadow-lg border-danger mt-4 mb-5">
                <div class="card-header bg-gradient-danger text-white py-4">
                    <h4 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Delete Student</h4>
                    <small>Confirm student deletion</small>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning border-warning mb-4">
                        <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Warning!</h5>
                        <p class="mb-0">Are you sure you want to delete this student? This action cannot be undone.</p>
                    </div>

                    <h5 class="mb-3">Student Details:</h5>
                    <div class="card bg-light">
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4"><i class="fas fa-barcode me-2"></i>Student Code:</dt>
                                <dd class="col-sm-8"><span class="badge bg-success px-3 py-2">@Model.StudentCode</span></dd>

                                <dt class="col-sm-4"><i class="fas fa-user me-2"></i>Full Name:</dt>
                                <dd class="col-sm-8"><strong>@Model.FullName</strong></dd>

                                <dt class="col-sm-4"><i class="fas fa-envelope me-2"></i>Email:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4"><i class="fas fa-phone me-2"></i>Phone:</dt>
                                <dd class="col-sm-8">@Model.Phone</dd>

                                <dt class="col-sm-4"><i class="fas fa-book me-2"></i>Major:</dt>
                                <dd class="col-sm-8">@Model.Major</dd>

                                <dt class="col-sm-4"><i class="fas fa-chart-line me-2"></i>GPA:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.GPA.HasValue)
                                    {
                                        <span class="badge bg-info text-dark">@Model.GPA.Value.ToString("F2")</span>
                                    }
                                </dd>

                                <dt class="col-sm-4"><i class="fas fa-toggle-on me-2"></i>Status:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i>Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="fas fa-times-circle me-1"></i>Inactive</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.StudentId" />

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>