@model SIMS.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container-fluid px-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card shadow-lg border-danger mt-4 mb-5">
                <div class="card-header bg-gradient-danger text-white py-4">
                    <h4 class="mb-0">
                        <i class="fas fa-trash-alt me-2"></i>Delete Course
                    </h4>
                    <small>Confirm course deletion</small>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning border-warning mb-4">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>Warning!
                        </h5>
                        <p class="mb-0">
                            Are you sure you want to delete this course? This action cannot be undone.
                        </p>
                    </div>

                    <h5 class="mb-3">Course Details:</h5>
                    <div class="card bg-light">
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4"><i class="fas fa-barcode me-2"></i>Course Code:</dt>
                                <dd class="col-sm-8"><span class="badge bg-primary px-3 py-2">@Model.CourseCode</span></dd>

                                <dt class="col-sm-4"><i class="fas fa-book me-2"></i>Course Name:</dt>
                                <dd class="col-sm-8"><strong>@Model.CourseName</strong></dd>

                                <dt class="col-sm-4"><i class="fas fa-star me-2"></i>Credits:</dt>
                                <dd class="col-sm-8"><span class="badge bg-info text-dark">@Model.Credits Credits</span></dd>

                                <dt class="col-sm-4"><i class="fas fa-chalkboard-teacher me-2"></i>Instructor:</dt>
                                <dd class="col-sm-8">@Model.Instructor</dd>

                                <dt class="col-sm-4"><i class="fas fa-align-left me-2"></i>Description:</dt>
                                <dd class="col-sm-8">@Model.Description</dd>

                                <dt class="col-sm-4"><i class="fas fa-toggle-on me-2"></i>Status:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-times-circle me-1"></i>Inactive
                                        </span>
                                    }
                                </dd>

                                <dt class="col-sm-4"><i class="far fa-calendar-plus me-2"></i>Created Date:</dt>
                                <dd class="col-sm-8">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                                @if (Model.UpdatedDate.HasValue)
                                {
                                    <dt class="col-sm-4"><i class="far fa-calendar-check me-2"></i>Last Updated:</dt>
                                    <dd class="col-sm-8">@Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                                }
                            </dl>
                        </div>
                    </div>

                    <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.CourseId" />

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.4);
        }

        .card-body dl dt {
            font-weight: 600;
            color: #495057;
        }
    </style>
}