@model SIMS.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="container-fluid px-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card shadow-lg border-0 mt-4 mb-5">
                <div class="card-header bg-gradient-info text-white py-4">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Course Details
                    </h4>
                    <small>Complete course information</small>
                </div>
                <div class="card-body p-4">
                    <!-- Course Header -->
                    <div class="text-center mb-4 pb-4 border-bottom">
                        <h2 class="text-primary mb-2">@Model.CourseName</h2>
                        <h4>
                            <span class="badge bg-primary px-4 py-2">@Model.CourseCode</span>
                        </h4>
                    </div>

                    <!-- Course Information -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-3 border-start border-primary border-4">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">
                                        <i class="fas fa-star text-warning me-2"></i>Credits
                                    </h6>
                                    <h4 class="mb-0">
                                        <span class="badge bg-info text-dark fs-5">
                                            @Model.Credits Credits
                                        </span>
                                    </h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card mb-3 border-start border-success border-4">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">
                                        <i class="fas fa-toggle-on text-success me-2"></i>Status
                                    </h6>
                                    <h4 class="mb-0">
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success fs-6">
                                                <i class="fas fa-check-circle me-1"></i>Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary fs-6">
                                                <i class="fas fa-times-circle me-1"></i>Inactive
                                            </span>
                                        }
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Instructor -->
                    <div class="card mb-3 border-start border-warning border-4">
                        <div class="card-body">
                            <h6 class="text-muted mb-2">
                                <i class="fas fa-chalkboard-teacher text-warning me-2"></i>Instructor
                            </h6>
                            <h5 class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.Instructor))
                                {
                                    <text>@Model.Instructor</text>
                                }
                                else
                                {
                                    <span class="text-muted">Not assigned</span>
                                }
                            </h5>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">
                                <i class="fas fa-align-left me-2"></i>Course Description
                            </h6>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p class="mb-0">@Model.Description</p>
                            }
                            else
                            {
                                <p class="text-muted mb-0">No description available</p>
                            }
                        </div>
                    </div>

                    <!-- Timeline -->
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6 class="mb-3">
                                <i class="fas fa-clock me-2"></i>Timeline
                            </h6>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <small class="text-muted d-block">Created Date</small>
                                    <strong>
                                        <i class="far fa-calendar-plus me-1"></i>
                                        @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                    </strong>
                                </div>
                                @if (Model.UpdatedDate.HasValue)
                                {
                                    <div>
                                        <small class="text-muted d-block">Last Updated</small>
                                        <strong>
                                            <i class="far fa-calendar-check me-1"></i>
                                            @Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")
                                        </strong>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        @if (User.IsInRole("Administrator"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.CourseId" class="btn btn-warning btn-lg text-dark">
                                <i class="fas fa-edit me-2"></i>Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.CourseId" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash me-2"></i>Delete
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-info {
            background: linear-gradient(135deg, #0dcaf0 0%, #0891b2 100%);
        }

        .text-primary {
            color: #667eea !important;
        }
    </style>
}