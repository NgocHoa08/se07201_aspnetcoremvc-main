@model SIMS.Models.Course

@{
    ViewData["Title"] = "Add Course";
}

<div class="container-fluid px-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card shadow-lg border-0 mt-4 mb-5">
                <div class="card-header bg-gradient-primary text-white py-4">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Add New Course
                    </h4>
                    <small>Fill in the course information below</small>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Add" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="CourseCode" class="form-label fw-bold">
                                    <i class="fas fa-barcode me-1"></i>Course Code <span class="text-danger">*</span>
                                </label>
                                <input asp-for="CourseCode" class="form-control form-control-lg"
                                       placeholder="e.g., CS101" />
                                <span asp-validation-for="CourseCode" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Credits" class="form-label fw-bold">
                                    <i class="fas fa-star me-1"></i>Credits <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Credits" type="number" class="form-control form-control-lg"
                                       min="1" max="10" placeholder="1-10" />
                                <span asp-validation-for="Credits" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CourseName" class="form-label fw-bold">
                                <i class="fas fa-book me-1"></i>Course Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="CourseName" class="form-control form-control-lg"
                                   placeholder="e.g., Introduction to Computer Science" />
                            <span asp-validation-for="CourseName" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Instructor" class="form-label fw-bold">
                                <i class="fas fa-chalkboard-teacher me-1"></i>Instructor
                            </label>
                            <input asp-for="Instructor" class="form-control form-control-lg"
                                   placeholder="e.g., Dr. John Doe" />
                            <span asp-validation-for="Instructor" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="fas fa-align-left me-1"></i>Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Enter course description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox"
                                       role="switch" checked />
                                <label asp-for="IsActive" class="form-check-label fw-bold">
                                    <i class="fas fa-toggle-on me-1"></i>Active Status
                                </label>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Save Course
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
        }

        .form-check-input:checked {
            background-color: #667eea;
            border-color: #667eea;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}